<doctrine-mapping xmlns="http://doctrine-project.org/schemas/phpcr/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <document 
        name="DTL\TravelBundle\Document\VoyagePost"
        referenceable="true"
        >

        <field name="distance" type="long"/>
        <field name="duration" type="long"/>
        <field name="maxSpeed" type="decimal"/>
        <referrers name="chronoDates" referring-document="DTL\TravelBundle\Document\ChronoDate" referenced-by="references"/>
    </document>

</doctrine-mapping>



<div class="row-fluid">
    <div class="span12">
        <h2>{{ post.title }}</h2>
    </div>
</div>
<div class="row-fluid">
    <div class="span6">
        <p><i>Posted on: {{ post.date.format('Y-m-d H:i:s') }}</i></p>
    </div>
    <div class="span6" style="text-align: right">
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        {{ post.body|markdown }}
    </div>
</div>

<h3>Stats</h3>

<div class="row-fluid">
    <div class="span12">
        {% include "DTLTravelBundle::journey_table.html.twig" with {"journey": post} %}
    </div>
</div>

